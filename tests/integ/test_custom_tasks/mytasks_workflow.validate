        <walltime>00:10:00</walltime>
        <cores>1</cores>
        <memory>2G</memory>
        <dependency>
            <datadep>file_needed_for_thing2</datadep>
        </dependency>
    </task>
    <task name="taskthing3" cycledefs="hourly" maxtries="2">
        <jobname>
            <cyclestr>task1_@Y@m@d@H_thing3</cyclestr>
        </jobname>
        <command>
